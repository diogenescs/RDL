<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="projeto" transaction-type="RESOURCE_LOCAL">
		<class>br.com.unifacs.model.Categoria</class>
		<class>br.com.unifacs.model.Contato</class>
		<class>br.com.unifacs.model.FormaDePgto</class>
		<class>br.com.unifacs.model.Frequencia</class>
		<class>br.com.unifacs.model.Lancamento</class>
		<class>br.com.unifacs.model.Orcamento</class>
		<class>br.com.unifacs.model.Projeto</class>
		<class>br.com.unifacs.model.Usuario</class>
		<class>br.com.unifacs.model.UsuarioProjeto</class>
		<class>br.com.unifacs.model.Historico</class>
		
		<properties>
			<property name="hibernate.connection.username" value="root"/>
			<property name="hibernate.connection.password" value=""/>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/> 
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/projeto"/>
			<property name="hibernate.show_sql" value="true"/>
		</properties>
	</persistence-unit>
</persistence>
